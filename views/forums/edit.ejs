<% layout('/layouts/boilerplate')%>
    <section class='forumPage'>
        <div class='newPostPage'>
            <form action="/forums/<%=post.category%>/<%=post._id%>?_method=PUT" method="POST" class="newPost">
                <div>
                    <label for="postTitle"></label>
                    <input type="text" id="postTitle" name='postTitle' class='titleEnter' value=<%=post.postTitle%>>
                </div>

                <input id='quillText' name='quillText' display='none'>
                <div id='editor'></div>

                <div>
                    <label for="category">Sub</label>
                    <select name="category" id="category">
                        <option value="General">General</option>
                        <option value="Guides">Guides</option>
                        <option value="Speedrun">Speedrun</option>
                        <option value="Art">Art</option>
                        <option value="Easter Eggs">Easter Eggs</option>
                        <option value="Humor">Humor</option>
                    </select>
                </div>
                <div class='centeredDiv'>
                    <button class='roundedButton' id='submitPost'>Update</button>
                
            </form>
        </div>
    </section>
    <script src="//cdn.quilljs.com/1.3.6/quill.core.js"></script>
    <script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <script src="/quill.js"></script>
    <script>
        quill.setContents(<%-JSON.stringify(quillBody)%>,'api');
    </script>